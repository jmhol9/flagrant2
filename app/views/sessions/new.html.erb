<h1 class="h1 h1--light h1--center">Log In</h1>
<% if response_has_errors? %>
  <% flash.now[:errors].each do |error| %>
  <div class="alert alert--danger">
      <span class="body body--bold">Error:</span> <%= error %>
  </div>
  <% end %>
<% end %>
<form action="<%= session_url %>" method="POST" class="container__col form form--centered">
  <%= auth_token %>
  <div>
    <label for="email" class="input__label">Email</label>
    <input type="text" placeholder="Email" name="user[email]" id="email" class="input">
  </div>
  <div>
    <label for="password" class="input__label">Password</label>
    <input type="password" placeholder="Password" name="user[password]" id="password" class="input">
  </div>
    <input type="submit" value="Log In" class="button">
</form>